@page
@model WebApp.Pages_Ingredients.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Ingredients in stock</h2>

<p>
    <a asp-page="Create" class="btn btn-dark">Create New</a>
</p>

<form class="form-inline" method="get">
    <div class="form-group">
        Search by name: <input type="text" value="@Model.SearchString" asp-for="SearchString" class="form-control"/>
        <input type="submit" value="Search" form-control class="btn btn-dark"/>
        <input type="submit" value="Reset" name="onReset" class="btn btn-secondary"
               @(string.IsNullOrWhiteSpace(Model.SearchString) ? "disabled=\"disabled\"" : "")/>
    </div>
</form>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].IngredientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].IngredientUnit)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].IngredientAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].IngredientCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient[0].IngredientLocation)
            </th>
            

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Ingredient) {
        <tr onclick="location.href = './Ingredients/Details?id=' + @item.IngredientId;">
            <td>
                @Html.DisplayFor(modelItem => item.IngredientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IngredientUnit.IngredientUnitName)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.IngredientAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IngredientCategory.IngredientCategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IngredientLocation.IngredientUnitName)
            </td>
            

        </tr>
}
    </tbody>
</table>
